{
  "name": "microservices-dashboard",
  "author": "Oleksandr Stolyarov",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:start": "docker-compose -f docker-compose.dev.yml up --build",
    "dev:docker:down": "docker-compose -f docker-compose.dev.yml down -v",
    "prod:docker:build": "docker-compose build",
    "prod:docker:up": "docker-compose up -d",
    "prod:docker:down": "docker-compose down",
    "prepare": "husky install",
    "test": "DOTENV_CONFIG_PATH=./backend/common/.env.test jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "pnpm exec eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "build": "tsc -p tsconfig.build.json",
    "deploy:staging": "echo 'Deploying to staging... (replace with real command)'",
    "deploy:prod": "echo 'Deploying to production... (replace with real command)'"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@jest/types": "^30.0.5",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "react-icons": "^5.5.0",
    "reflect-metadata": "^0.2.2"
  },
  "pnpm": {
    "hoist": true
  }
}
