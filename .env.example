# Environment variables for development
NODE_ENV=development
PORT=4000

# Remote PostgreSQL Database Connection
DATABASE_URL=postgresql://dashboard_user:___/microservices_dashboard

# JWT Configuration (generate your own secrets in production)
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRATION=7d

# API Gateway
API_GATEWAY_PORT=4000

# Worker Service
WORKER_SERVICE_PORT=4001
WORKER_SERVICE_URL=http://localhost:4001
# Inter-service authentication: Generate a secure random key (e.g., openssl rand -base64 32)
WORKER_SERVICE_API_KEY=worker-secret-key-change-in-production

# AI Service
AI_SERVICE_PORT=4002
AI_SERVICE_URL=http://localhost:5000
# Inter-service authentication: Generate a secure random key (e.g., openssl rand -base64 32)
AI_SERVICE_API_KEY=ai-secret-key-change-in-production
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI Configuration (for AI Service)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Redis Configuration (for AI Service caching)
REDIS_URL=redis://localhost:6379
# Alternative: Use REDIS_HOST and REDIS_PORT
# REDIS_HOST=localhost
# REDIS_PORT=6379

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:4000/graphql
